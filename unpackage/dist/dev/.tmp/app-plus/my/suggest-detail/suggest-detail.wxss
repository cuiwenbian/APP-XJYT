
page {
    background: #edeeee;
}
.t {
    height: 30rpx;
}
.suggest-list {
    width: 100%;
    height: auto;
    background: #fff;
    padding: 20rpx 48rpx;
    overflow: hidden;
    box-sizing: border-box;
}
.time {
    height: 90rpx;
    width: 100%;
    border-bottom: 1rpx solid #f2f2f2;
}
.submit-time {
    height: 90rpx;
    width: 520rpx;
    line-height: 90rpx;
    float: left;
    font-size: 28rpx;
    color: #a0a0a0;
}
.status {
    height: 90rpx;
    line-height: 90rpx;
    float: right;
    color: #dcb16e;
    font-size: 28rpx;
}
.question{
	color: #121212;
	font-size: 28rpx;
	overflow: hidden;
	line-height: 50rpx;
}
.tit{
	width:20%;
	float: left;
	height:auto;
}
.answer{
	width:80%;
	float: left;
	height:auto;
}
.answer1 {
    width: 500rpx;
    float: right;
    font-size: 28rpx;
    line-height: 50rpx;
    word-break: break-all;
    word-wrap: break-word;
}

