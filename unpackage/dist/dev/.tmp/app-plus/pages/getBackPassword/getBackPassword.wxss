}
.pass {
    width: 100%;
    height: 120rpx;
    background: #ffffff;
    position: relative;
}
.icon {
    float: left;
    width: 60rpx;
    height: 60rpx;
    margin-left: 48rpx;
    margin-top: 30rpx;
}
.phone {
    float: right;
    width: 600rpx;
    height: 120rpx;
    font-size: 30rpx;
}
.code {
    float: right;
    width: 376rpx;
    height: 120rpx;
    font-size: 30rpx;
}
.getcode {
    float: right;
    border-radius: 50rpx;
    width: 180rpx;
    height: 50rpx;
    font-size: 22rpx;
    background: #797979;
