
page {
    background: #121212;
}
.logo {
    width: 185rpx;
    height: 185rpx;
    margin-top: 135rpx;
    margin-left: calc((100% - 185rpx) / 2);
}
.fil {
    width: 250rpx;
    height: 100rpx;
    display: block;
    margin: 0 auto 100rpx;
}
.enter {
    width: 600rpx;
    height: 100rpx;
    margin: 10rpx auto;
}
.title {
    float: left;
    color: #fff;
    width: 150rpx;
    line-height: 80rpx;
    font-size: 30rpx;
}
.number {
    float: right;
    width: 450rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1rpx solid #555555;
    color: #fff;
    font-size: 24rpx;
}
.getcode {
    border-radius: 50rpx;
    width: 180rpx;
    height: 50rpx;
    font-size: 22rpx;
    background: rgba(243, 243, 243, 0.5);
    color: #fff;
    text-align: center;
    line-height: 50rpx;
    position: absolute;
    bottom: 20rpx;
    right: 0;
}
button[disabled] {
    background: rgba(243, 243, 243, 0.5) !important;
    color: #fff !important;
}
.btn {
    width: 664rpx;
    height: 88rpx;
    background: #fff;
    border-radius: 50rpx;
    margin: 40rpx auto;
    color: #333;
    text-align: center;
    line-height: 88rpx;
}
.goback {
    width: 263rpx;
    height: 58rpx;
    border: 1px solid rgba(255, 255, 255, 1);
    border-radius: 29px;
    margin: 60rpx auto;
    font-weight: 400;
    font-size: 24rpx;
    color: rgba(177, 177, 177, 1);
    line-height: 58rpx;
    text-align: center;
}
.shade {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 99;
}
.pop {
    width: 550rpx;
    height: 300rpx;
    margin: 500rpx auto;
    padding: 0 60rpx;
    box-sizing: border-box;
    background: #fff;
    border-radius: 10rpx;
}
.pop-title {
    text-align: center;
    font-size: 32rpx;
    color: #121212;
    line-height: 160rpx;
}
.pop-btn {
    width: 158rpx;
    height: 66rpx;
    border-radius: 10rpx;
    line-height: 66rpx;
    font-size: 30rpx;
    color: #fff;
    text-align: center;
    background: #121212;
    margin: 0 auto;
}

