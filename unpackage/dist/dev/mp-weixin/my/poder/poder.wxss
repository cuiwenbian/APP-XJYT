.form-list-wrap {
  padding: 60rpx 31rpx 0;
}
.form-list-wrap.active .title-box {
    color: #02d393;
}
.form-list-wrap.active .title-box .icon-img {
      display: none;
}
.form-list-wrap.active .title-box .icon-img-active {
      display: inline-block;
}
.form-list-wrap.active .write-wrap .write-input {
    border-color: #02d393;
}
.form-list-wrap .title-box {
    color: #333;
    -webkit-transition: color 0.3s;
    transition: color 0.3s;
}
.form-list-wrap .title-box .icon-img {
      margin-right: 18rpx;
}
.form-list-wrap .title-box .icon-img.user-n {
        width: 26rpx;
        height: 31rpx;
}
.form-list-wrap .title-box .icon-img.trans-n {
        width: 26rpx;
        height: 25rpx;
}
.form-list-wrap .title-box .icon-img-active {
        display: none;
        margin-right: 18rpx;
}
.form-list-wrap .title-box .icon-img-active.trans-n {
          width: 26rpx;
          height: 26rpx;
}
.form-list-wrap .write-wrap {
    padding-top: 60rpx;
    padding-left: 46rpx;
}
.form-list-wrap .write-wrap .write-input {
      height: 45rpx;
      width: 100%;
      padding: 0 15rpx;
      line-height: 45rpx;
      border-bottom: 1px solid #929097;
      -webkit-transition: color 0.3s;
      transition: color 0.3s;
}
.form-list-wrap .other-info {
    height: 48rpx;
    padding-left: 46rpx;
    padding-top: 15rpx;
    font-size: 26rpx;
    color: #8b8b8d;
}
.form-list-wrap .other-info .tr-num {
      padding: 0 28rpx;
      color: #02d393;
      font-weight: 500;
      font-family: 'myface';
}
.form-list-wrap .other-info .err-tip {
      color: #bc2c34;
}
.submit-btn-wrap {
  padding-top: 130rpx;
  text-align: center;
}
.submit-btn-wrap .submit-btn {
    display: inline-block;
    width: 511rpx;
    height: 98rpx;
    line-height: 98rpx;
    text-align: center;
    color: #fff;
    font-size: 30rpx;
    border-radius: 50rpx;
    box-shadow: 0 0 15rpx 15rpx rgba(205, 247, 235, 0.3);
    background-image: -webkit-linear-gradient(left, #01c774, #01dda9);
    background-image: linear-gradient(to right, #01c774, #01dda9);
}
.submit-btn-wrap .submit-btn.active {
      opacity: 0.4;
}
.all03s {
  -webkit-transition: all 0.3s;
  transition: all 0.3s;
}

