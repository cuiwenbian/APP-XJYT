.c_form-list-wrap {
  box-sizing: border-box;
}
.c_form-list-wrap.active .title-box {
    color: #02d393;
}
.c_form-list-wrap.active .default-img-box {
    display: none;
}
.c_form-list-wrap.active .default-img-active {
    display: inline-block;
}
.c_form-list-wrap.active .write-wrap .write-input {
    border-color: #02d393;
}
.c_form-list-wrap .default-img-box {
    width: 46rpx;
}
.c_form-list-wrap .default-img-active {
    display: none;
    width: 46rpx;
}
.c_form-list-wrap .title-box {
    color: #333;
    -webkit-transition: color 0.3s;
    transition: color 0.3s;
}
.c_form-list-wrap .title-box .icon-img {
      margin-right: 18rpx;
}
.c_form-list-wrap .title-box .icon-img.user-n {
        width: 26rpx;
        height: 31rpx;
}
.c_form-list-wrap .title-box .icon-img.trans-n {
        width: 26rpx;
        height: 25rpx;
}
.c_form-list-wrap .title-box .icon-img-active {
        display: none;
        margin-right: 18rpx;
}
.c_form-list-wrap .title-box .icon-img-active.trans-n {
          width: 26rpx;
          height: 26rpx;
}
.c_form-list-wrap .write-wrap {
    padding-top: 40rpx;
    padding-left: 46rpx;
}
.c_form-list-wrap .write-wrap .write-input {
      height: 62rpx;
      width: 100%;
      padding: 0 15rpx;
      line-height: 62rpx;
      color: #000;
      font-size: 28rpx;
      font-weight: normal;
      border: none;
      outline: none;
      border-bottom: 1px solid #929097;
      -webkit-transition: color 0.3s;
      transition: color 0.3s;
      box-sizing: border-box;
}
.c_form-list-wrap .other-info {
    height: 48rpx;
    padding-left: 46rpx;
    padding-top: 15rpx;
    font-size: 26rpx;
    color: #8b8b8d;
}
.c_form-list-wrap .other-info .tr-num {
      padding: 0 28rpx;
      color: #02d393;
      font-weight: 500;
}
.c_form-list-wrap .other-info .err-tip {
      color: #bc2c34;
}
.inner-input-wrap {
  position: relative;
}
.handle-btn-wrap {
  position: absolute;
  z-index: 2;
  right: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}

